/**
 * Plugin - SexTalk
 * Enabled Default? Yes, but can be disabled in the sexbound.config file
 *
 * Controls the ability for actors to speak during sex.
 */
{
  /**
   * This number range species how often an actor speaks. Default: 10 to 20 seconds.
   */
  "cooldown": [10, 20],
  
  /**
   * When "true", player actors will not trigger dialogue when there are only players in the node.
   * For players that want to roleplay their own dirtytalk in MP situations
   */
  "roleplayMode": true,

  /**
   * true  := Display emoticons as actor emotes.
   * false := Disabled.
   */
  "enableEmoticons": true,

  /**
   * (Emote Plugin Required) The below emoticons can be found in a line of dialog, then a matching emote animation is played.
   */
  "emoticons": {
    "happy": [":)", "^_^", "\\o/", ":-)"],
    "cry": [":'("],
    "neutral": [":|", ":-|", "-_-"],
    "laugh": [":D", "XD", ":-D"],
    "annoyed": [">:|", "<_<", ":(", ":-("],
    "shout": [":o", "o.0", "0.o", ":O", "O.O"],
    "wink": [";)", ";-)"]
  },

  /**
   * The specified species names will not use dialog from the default dialog files.
   */
  "skipMergeDefaultDialog": {
    "entityType": ["monster"],
    "species": ["floran", "fenerox", "glitch", "sexbound_bodypillow", "sexbound_tentacleplant_v2"]
  },

   /**
   * The specified species names will have their dialogue for the specified species actor override the default instead of appended.
   */
  "noMergeDefaultDialog": {
    "neki": ["neki", "human", "sexbound_tentacleplant_v2"]
  }
}
